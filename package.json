{
  "name": "next-express-template",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "install": "concurrently \"npm run install:client\" \"npm run install:server\"",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "start:client": "cd client && npm run dev",
    "start:server": "cd server && npm run dev",
    "dev": "concurrently \"npm run start:client\" \"npm run start:server\""
  },
  "keywords": [
    "nextjs",
    "express",
    "template",
    "fullstack",
    "react",
    "node",
    "concurrent",
    "typescript",
    "javascript"
  ],
  "author": "Manish Kumar",
  "license": "ISC",
  "description": "A Next.js and Express template with concurrent client and server development",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
